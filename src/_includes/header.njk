<header class="site-header">
    {% if page.url != "/" %}
        <a href="/">Go home...</a>
        <h1>{{ title }}</h1>
    {% else %}
        <h1>{{ site.title}}</h1>
    {% endif %}
</header>
<nav class="site-navbar">
    {% for navbar in nav.navbar %}
        <a class="navbar_link" href="{{ navbar.url }}">{{ navbar.title }}</a>
    {% endfor %}
</nav>