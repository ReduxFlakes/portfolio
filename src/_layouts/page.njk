{% extends "./base.njk" %}

{% block layout %}
    {% if title and description %}
        <header class="page-header">
            <h1>{{title}}</h1>
            <p>{{description}}</p>
            <p>
                {% if update %}
                    <em>Updated in: </em>
                    <time datetime="{{ update | dateToISOString }}">{{ update | PostDate }}</time>
                {% endif %}
            </p>
        </header>
    {% endif %}
    <article>
        {{ content | safe }}
    </article>
{% endblock %}