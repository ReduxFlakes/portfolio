<header class="sky-brand-header">
<nav class="sky-complex-navbar">
{% for item in nav.navbar %}
    <details class="navbar-menu">
        <summary class="navbar-button">
        <img src="/static/icons/{{item.icon}}.png" alt="{{item.title}} icon" style="width: 1.25rem;height: 1.25rem;">
        {{item.title}}
        </summary>
        <section class="menu-content">
        {% for meta in item.menu %}
        <small style="display:block; opacity: 0.75;"><em>Description:</em></small>
        <small>{{meta.description}}</small>
        <nav class="menu-nav">
        {% for links in meta.links %}
            <a class="menu-nav__link" href="{{links.url}}"><img src="/static/icons/{{links.icon}}.png" alt="{{links.title}} icon" width="24px" height="24px">{{links.title}}
            <span class="context">{{links.context}}</span>
            </a>
        {% endfor %}
    </nav>
        {% endfor %}
        </section>
    </details>
{% endfor %}
</nav>
</header>