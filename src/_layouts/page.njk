{% extends "./base.njk" %}

{% block base %}
    <header>
        <h1>{{title}}</h1>
        <p>{{description}}</p>
        {% if modified %}
            <p>Last updated in: <time datetime="{{modified}}">{{ modified | formatPostDate }}</time>
            </p>
        {% endif %}
    </header>
    <article class="flow">
        {{ content | safe }}
    </article>
{% endblock %}