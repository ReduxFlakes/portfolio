{% css "critical" %}
{% include "./styles/critical/footer.css" %}
{% include "./styles/critical/navbar.css" %}
{% endcss %}

<footer class="site-footer content">
  <h3 id="navigation">Navigation</h3>
  <nav class="navbar">
    {% for item in nav.navbar %}
      <details class="navbar-menu">
        <summary class="navbar-button">
          <img src="/static/icons/{{item.icon}}.png" alt="{{item.title}} icon" style="width: 1.25rem;height: 1.25rem;">
          {{item.title}}
        </summary>
        <section class="menu-content">
          {% for meta in item.menu %}
            <small style="display:block; opacity: 0.75;">
              <em>Description:</em>
            </small>
            <small>{{meta.description}}</small>
            <nav class="menu-nav">
              {% for links in meta.links %}
                <a class="menu-nav__link" href="{{links.url}}"><img src="/static/icons/{{links.icon}}.png" alt="{{links.title}} icon" width="24px" height="24px">{{links.title}}
                  <span class="context">{{links.context}}</span>
                </a>
              {% endfor %}
            </nav>
          {% endfor %}
        </section>
      </details>
    {% endfor %}
  </nav>
  <iframe
      src="//incr.easrng.net/badge?key=reduxflakes"
      style="background: url(//incr.easrng.net/bg.gif)"
      title="increment badge"
      width="88"
      height="31"
    ></iframe>
  <div class="site-footer-webrings">
    <div id="neossg">
      <script
      src="https://neossg.neocities.org/onionring-variables.js" async
    ></script>
      <script
      src="https://neossg.neocities.org/onionring-widget.js" async
    ></script>
    </div>
    <div class="webring">
      <a href="https://hotlinewebring.club/reduxflakes/previous">Prev</a>
      <a href="https://hotlinewebring.club/">Hotline</a>
      <a href="https://hotlinewebring.club/reduxflakes/next">Next</a>
    </div>
    <div class="webring">
      <a href="https://loop.graycot.dev/webring.html?action=prev"> &#8592;</a>
      <a href="https://loop.graycot.dev/webring.html?action=home">Loop Ring</a>
      <a href="https://loop.graycot.dev/webring.html?action=next"> &#8594; </a>
    </div>
    <div class="webring">
      <a href="https://webring.dinhe.net/prev/reduxflakes.neocities.org">
      &#8592;
    </a>
      <a href="https://webring.dinhe.net">Retronaut</a>
      <a href="https://webring.dinhe.net/next/reduxflakes.neocities.org">
      &#8594;
    </a>
    </div>
    <div style="display: flex">
      <script src="https://nuthead.neocities.org/ring/ring.js" async></script>
    </div>
  </div>
  <p style="display:flex;flex-wrap:wrap;justify-content:center;gap:0.5em;">
    {% for social in socials.social %}
      <a class="social--link" href="{{social.link}}" title="{{social.name}}">
        {{social.name}}
      </a>
    {% endfor %}
  </p>
  <p class="site-footer-copy">&copy; 2024 ReduxFlakes - <a href="/privacy">Privacy Statement</a>
  </p>
</footer>