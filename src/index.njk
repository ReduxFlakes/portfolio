{% set postsCount = collections.blog | length %}
{% set latestPostsCount = postsCount | min(numberOfLatestPostsToShow) %}

<h2>Latest {{ latestPostsCount }} Blog Post{% if latestPostsCount != 1 %}s{% endif %}
</h2>

<ul>
    {%- for post in collections.blog | reverse -%}
        {% if loop.index0 < numberOfLatestPostsToShow %}
            <li>
                <a href="{{post.url}}">{{post.data.title}}</a> | <time datetime="{{post.date}}">{{post.date | formatPostDate }}</time>
            </li>
        {% endif %}
    {%- endfor -%}
</ul>

<p>All posts are available at the <a href="/posts/">archive</a>.</p>

