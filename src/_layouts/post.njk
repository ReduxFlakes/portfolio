{% extends "./single.njk" %}

{% block content %}
    <main class="site--content page--content">
        <header class="post--header">
            <h1>{{ title }}</h1>
            <time datetime="{{ date | dateToISOString }}">{{ date | PostDate }}</time>
        </header>
        <article id="main--content">
            {{ content | safe }}
        </article>
    </main>
    <style>
        .post--header {
            text-align: center;
            padding-bottom: var(--sp);
            border-bottom: 1px dashed var(--clr-text);
        }
        .post--header h1 {
            margin-bottom: 0;
        }
    </style>
{% endblock %}